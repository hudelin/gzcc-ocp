<script src="/res/layui/layui.js"></script>
<script type="text/javascript" src="/res/mods/wangEditor.min.js"></script>
<script>
    layui.cache.page = 'jie';
    layui.cache.user = {
        username: '游客'
        , uid: -1
        , avatar: '../../res/images/avatar/00.jpg'
        , experience: 83
        , sex: '男'
    };
    layui.config({
        version: "3.0.0"
        , base: '../../res/mods/'
    }).extend({
        fly: 'index',
        request: 'request'
    }).use(['request', 'jquery', 'laytpl', 'form', 'laypage', 'util', 'layer', 'fly'], function () {
        var $ = layui.$
        var fly = layui.fly;
        var laytpl = layui.laytpl
        var request = layui.request
        var form = layui.form;
        var laypage = layui.laypage;
        var util = layui.util;
        var layer = layui.layer;

        var noteId = '${noteId}'
        var note = {};
        var replyPage = {};
        //请求帖子内容
        request.ajax({
            type: 'POST',
            url: '/note/get',
            data: {noteId: noteId},
        }).then(function (res) {
            console.log("note", res)
            if (res.code == 0) {
                note = res.data;
                note.timeAgo = util.timeAgo(note.lastModifiedTime)
                var collect = false
                var data = {
                    note: note,
                    userId: 0,
                    collect: collect
                }
                if (layui.sessionData('userData').user != null) {
                    data.userId = layui.sessionData('userData').user.id;
                    if(layui.sessionData('userData').user.collectNote){
                        var collectNoteList = layui.sessionData('userData').user.collectNote.split(",");
                        if (collectNoteList.find(e => e == note.id)){
                            data.collect = true
                        }
                    }

                }
                var getTpl = noteTemplate.innerHTML
                    , view = document.getElementById('noteBox');
                laytpl(getTpl).render(data, function (html) {
                    view.innerHTML = html;
                });
                // $('#note-content').html(note.content)
                $('body').on('click', '.jie-admin', function(){
                    var othis = $(this), type = othis.attr('type');
                    console.log(type)
                    gather.jieAdmin[type] && gather.jieAdmin[type].call(this, othis.parent());
                });

                requestFindPage(noteId).then(function (replyPage) {
                    loadPageBar(replyPage)
                })
            }

        })

        //请求回复分页
        function requestFindPage(noteId, page, size) {
            return request.ajax({
                type: 'POST',
                url: '/note/findReplyPage',
                data: {noteId: noteId, page: page || 1, size: size || 10,},
            }).then(function (res) {
                replyPage = res
                loadReply(replyPage)
                return replyPage
            })
        }

        //加载回复分页
        function loadReply(replyPage) {
            var content = replyPage.content;
            content.forEach(function (item) {
                item.timeAgo = util.timeAgo(item.lastModifiedTime)
                if(item.praiseUserIdString){
                    item.praiseUserIdList=item.praiseUserIdString.split(",")
                }
            })
            return new Promise(function (res, reject) {
                if (content.length <= 0) {
                    reject();
                }
                var data = {
                    content: content,
                    noteUserId: note.user.id,
                    userId: layui.sessionData('userData').user != null ? layui.sessionData('userData').user.id : 0
                }
                console.log(data)
                var getTpl = replyTemplate.innerHTML
                    , view = document.getElementById('jieda');
                laytpl(getTpl).render(data, function (html) {
                    view.innerHTML = html;
                });
                res(replyPage)
            }).catch(function (e) {

            })
        }

        //加载分页工具
        function loadPageBar(replyPage) {
            laypage.render({
                elem: 'demo0'
                , count: replyPage.totalElements //数据总数
                , limit: replyPage.size || 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj, first) {
                    //obj包含了当前分页的所有参数，比如：
                    console.log(obj.curr); //得到当前页，以便向服务端请求对应页的数据。
                    console.log(obj.limit); //得到每页显示的条数
                    //首次不执行
                    if (!first) {
                        //do something
                        requestFindPage(noteId, obj.curr, obj.limit)
                    }
                }
            });
            $('.reply-event').on('click', function () {
                var othis = $(this), type = othis.data('type'), id = othis.data('id');

                console.log(othis)
                console.log(type)
                console.log(id)
                active[type] ? active[type].call(this, othis) : '';
            });

        }

        //创建回复文本编辑器
        var E = window.wangEditor
        var editor = new E('#toolbar', '#content')  // 两个参数也可以传入 elem 对象，class 选择器
        editor.customConfig.zIndex = 1
        editor.customConfig.onchange = function (html) {
            // html 即变化之后的内容
            document.getElementById('L_content').value = html
            console.log(html)
        }
        // editor.customConfig.emotions = [
        //     {
        //         // tab 的标题
        //         title: '默认',
        //         // type -> 'emoji' / 'image'
        //         type: 'image',
        //         // content -> 数组
        //         content: [
        //             {
        //                 alt: '[坏笑]',
        //                 src: 'http://img.t.sinajs.cn/t4/appstyle/expression/ext/normal/50/pcmoren_huaixiao_org.png'
        //             },
        //             {
        //                 alt: '[爱你]',
        //                 src: 'http://img.t.sinajs.cn/t4/appstyle/expression/ext/normal/f6/2018new_aini_org.png'
        //             },
        //             {
        //                 alt: '[舔屏]',
        //                 src: 'http://img.t.sinajs.cn/t4/appstyle/expression/ext/normal/40/pcmoren_tian_org.png'
        //             }
        //         ]
        //     }
        // ]
        editor.create()
        form.on('submit(replyNote)', function (data) {
            var ok = true
            console.log(data.elem) //被执行事件的元素DOM对象，一般为button对象
            console.log(data.form) //被执行提交的form对象，一般在存在form标签时才会返回
            console.log(data.field) //当前容器的全部表单字段，名值对形式：{name: value}
            if (layui.sessionData('userData').user == null) {
                layer.msg('请先登录');
                return false
            } else {
                data.field.userId = layui.sessionData('userData').user.id
            }

            if ($("#replyId").val() != "") {
                data.field.createTime = new Date(replyPage.content.find(e => e.id == data.field.id).createTime
            )
            }
            request.ajax({
                type: 'POST',
                url: '/reply/save',
                data: data.field,
            }).then(function (res) {
                // note.replyList.push(res)
                editor.txt.clear()
                // replyPage = res
                requestFindPage(noteId).then(function (replyPage) {
                    loadPageBar(replyPage)
                })
            })
            return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
        });


        //触发事件
        var active = {
            edit: function (othis) {
                var id = othis.data('id');
                $("#replyId").val(id)
                editor.txt.html(replyPage.content.find(e => e.id == id).content
            )
            }
            , delete: function (othis) {
                var id = othis.data('id');
                layer.confirm('确认删除该回答么？', function (index) {
                    request.ajax({
                        type: 'POST',
                        url: '/reply/delete',
                        data: {replyId: id, noteId: noteId},
                    }).then(function (res) {
                        requestFindPage(noteId).then(function (replyPage) {
                            loadPageBar(replyPage)
                        })
                    })
                    layer.close(index);
                });
            }
            , accept: function (othis) {
                var id = othis.data('id');
                layer.confirm('是否采纳该回答为最佳答案？', function (index) {
                    request.ajax({
                        type: 'POST',
                        url: '/reply/accept',
                        data: {replyId: id, noteId: noteId},
                    }).then(function (res) {
                        requestFindPage(noteId).then(function (replyPage) {
                            loadPageBar(replyPage)
                        })
                    })
                    layer.close(index);
                });
            }
            , praise:function (othis) {
                var id = othis.data('id');
                request.ajax({
                    type: 'POST',
                    url: '/reply/praise',
                    data: {replyId: id, userId: layui.sessionData('userData').user.id},
                }).then(function (res) {
                    requestFindPage(noteId).then(function (replyPage) {
                        loadPageBar(replyPage)
                    })
                })
            }
        };

        var gather = {}


        gather.jieAdmin = {
            //删求解
            // del: function(div){
            //     layer.confirm('确认删除该求解么？', function(index){
            //         layer.close(index);
            //         fly.json('/api/jie-delete/', {
            //             id: div.data('id')
            //         }, function(res){
            //             if(res.status === 0){
            //                 location.href = '/jie/';
            //             } else {
            //                 layer.msg(res.msg);
            //             }
            //         });
            //     });
            // }
            //设置置顶、状态
            // ,set: function(div){
            //     var othis = $(this);
            //     fly.json('/api/jie-set/', {
            //         id: div.data('id')
            //         ,rank: othis.attr('rank')
            //         ,field: othis.attr('field')
            //     }, function(res){
            //         if(res.status === 0){
            //             location.reload();
            //         }
            //     });
            // }
            //收藏
            // ,
            collect: function(div){
                var othis = $(this), type = othis.data('type');
                if(type == 'add'){
                    request.ajax({
                        type: 'POST',
                        url: '/user/collectNote',
                        data: {
                            userId: layui.sessionData('userData').user.id,
                            noteId: note.id
                        },
                    }).then(function (res) {
                        layui.sessionData('userData', {
                            key: 'user'
                            ,value: res.data
                        });
                        othis.data('type', 'remove').html('取消收藏').addClass('layui-btn-danger');
                    })
                } else if(type == 'remove'){
                    request.ajax({
                        type: 'POST',
                        url: '/user/removeNote',
                        data: {
                            userId: layui.sessionData('userData').user.id,
                            noteId: note.id
                        },
                    }).then(function (res) {
                        layui.sessionData('userData', {
                            key: 'user'
                            ,value: res.data
                        });
                        othis.data('type', 'add').html('收藏').removeClass('layui-btn-danger');
                    })
                }
            }
        };


    })

</script>

