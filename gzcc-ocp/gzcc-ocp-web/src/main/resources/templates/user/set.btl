<script>

</script>
<script>
    layui.cache.page = 'user';
    layui.cache.user = {
        username: '游客'
        , uid: -1
        , avatar: '../../res/images/avatar/00.jpg'
        , experience: 83
        , sex: '男'
    };
    layui.config({
        version: "2.0.0"
        , base: '../../res/mods/'
    }).extend({
        fly: 'index'
    }).use(['fly', 'upload', 'jquery', 'croppers','request'], function () {
        var $ = layui.$;
        var upload = layui.upload;
        var request = layui.request;
        var avatarAdd = $('.avatar-add');


        // 选完文件后不自动上传
        upload.render({
            elem: '#chooseImage'
            , url: '/user/upload/'
            , auto: false
            , field: "multipartFile"
            , data: {
                userId: layui.data('userData').user.id,
            }
            //,multiple: true
            , bindAction: '#uploadImage'
            ,choose: function(obj){
                obj.preview(function(index, file, result){
                    avatarAdd.find('.avatar-image').attr('src',result);
                    // $('#demo2').append('<img src="'+ result +'" alt="'+ file.name +'" class="layui-upload-img">')
                });
            }
            , done: function (res) {
                console.log(res)
                if (res.code == 0) {
                    avatarAdd.find('.avatar-image').attr('src', res.data.src);
                    var user=layui.data('userData').user;
                    request.ajax({
                        type: 'POST',
                        url: '/user/update',
                        data:{
                            id:user.id,
                            avatar:res.data.src,
                        },
                    }).then(function (result) {
                      if(result.code == 0){
                          location.reload();
                      }
                    })
                }
                // avatarAdd.find('.loading').show();
            }
        });

        // var croppers = layui.croppers;
        //
        // //创建一个头像上传组件
        // croppers.render({
        //     elem: '#test8'
        //     ,saveW:150     //保存宽度
        //     ,saveH:150
        //     ,mark:1/1    //选取比例
        //     ,area:'900px'  //弹窗宽度
        //     ,url: "/user/upload/"  //图片上传接口返回和（layui 的upload 模块）返回的JOSN一样
        //     ,done: function(url){ //上传完毕回调
        //         $("#inputimgurl").val(url);
        //         $("#srcimgurl").attr('src',url);
        //     }
        // });

    });
</script>


</body>
</html>