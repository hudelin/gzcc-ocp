<script type="text/html" id="barDemo">
    <!-- <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a> -->
     <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script>
    layui.config({
        version: "3.0.0"
        , base: '../../res/mods/'
    }).extend({
        request: 'request'
    }).use(['jquery', 'request', 'table', 'form', 'upload','layer'], function () {
        var $ = layui.$
        var table = layui.table;
        var request = layui.request;
        var upload = layui.upload;
        var form = layui.form;
        var layer = layui.layer;

        var E = window.wangEditor
        var editor = new E('#toolbar', '#content')  // 两个参数也可以传入 elem 对象，class 选择器
        editor.customConfig.zIndex = 1
        editor.customConfig.pasteFilterStyle = false
        editor.customConfig.onchange = function (html) {
            // html 即变化之后的内容
            document.getElementById('L_content').value = html
            console.log(html)
        }
        editor.create()

        var name = "";
        //第一个实例
        var majorTable = table.render({
            elem: '#table'
            // ,height: 312
            , height: 'full-200'
            , url: '/note/findPage' //数据接口
            , cellMinWidth: 80
            // ,toolbar: true
            , toolbar: '#toolbarDemo'
            , page: true //开启分页
            , request: {
                pageName: 'page' //页码的参数名称，默认：page
                , limitName: 'size' //每页数据量的参数名，默认：limit
            }
            , parseData: function (res) { //res 即为原始返回的数据
                console.log(res)
                return {
                    "code": "0", //解析接口状态
                    "msg": res.msg, //解析提示文本
                    "count": res.data.totalElements, //解析数据长度
                    "data": res.data.content //解析数据列表
                };
            }
            , cols: [[ //表头
                {type: 'checkbox'}
                , {field: 'id', title: 'ID', sort: true}
                , {field: 'null', title: '发帖人ID', sort: true,templet: '#userIdTemplate'}
                , {field: 'username', title: '发帖人',sort: true, templet: '#usernameTemplate'}
                , {field: 'avatar', title: '头像', templet: '#avatarTemplate',width:100}
                , {field: 'title', title: '标题', sort: true}
                , {field: 'null', title: '内容', templet: '#contentTemplate', event: 'content'}
                , {field: 'null', title: '置顶', templet: '#topTemplate', event: 'top'}
                , {field: 'createTime', title: '创建时间', sort: true}
                , {fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150}
            ]]
            , done: function (res, curr, count) {
                //如果是异步请求数据方式，res即为你接口返回的信息。
                //如果是直接赋值的方式，res即为：{data: [], count: 99} data为当前页数据、count为数据总长度
                console.log(res);
                //得到当前页码
                console.log(curr);
                //得到数据总量
                console.log(count);
                console.log(majorTable)
                var data = majorTable.config.data;
            }
            , where: {

            }
        });

        //监听单元格编辑
        table.on('edit(tableFilter)', function (obj) {
            var value = obj.value //得到修改后的值
                , data = obj.data //得到所在行所有键值
                , field = obj.field; //得到字段
            layer.msg('[ID: ' + data.id + '] ' + field + ' 字段更改为：' + value);
        });
        table.on('toolbar(tableFilter)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'addUser':
                    form.val("modalForm", {
                        "id": null
                        , "name": null
                    })
                    $('#demo1').attr('src', null);
                    formLayerIndex = layer.open({
                        type: 1,
                        area: '550px',
                        content: $('#editModal') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                    });
                    break;
                case 'getCheckData':
                    var data = checkStatus.data;
                    layer.alert(JSON.stringify(data));
                    break;
                case 'getCheckLength':
                    var data = checkStatus.data;
                    layer.msg('选中了：' + data.length + ' 个');
                    break;
                case 'isAll':
                    layer.msg(checkStatus.isAll ? '全选' : '未全选');
                    break;
                case 'refresh':
                    findPage();
                    break;
            }
            ;
        });
        //监听行工具事件
        table.on('tool(tableFilter)', function (obj) {
            var data = obj.data;
            console.log(obj)
            if (obj.event === 'del') {
                layer.confirm('是否删除', function (index) {
                    // obj.del();
                    request.ajax({
                        type: 'POST',
                        url: '/note/delete',
                        data: {id: data.id},
                    }).then(function (result) {
                        if (result.code == 0) {
                            findPage();
                            layer.close(index);
                        }
                    })
                });
            } else if (obj.event === 'edit') {
                form.val("modalForm", {
                    "id": data.id
                    , "name": data.name
                })
                formLayerIndex = layer.open({
                    type: 1,
                    area: '550px',
                    content: $('#editModal') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                });
            } else if (obj.event === 'content' ) {
                form.val("editText", {
                    "id": data.id
                    , "L_event": obj.event
                })
                editor.txt.clear()
                editor.txt.html(data[obj.event])
                formLayerIndex=layer.open({
                    type: 1,
                    area: '750px',
                    maxmin: true,
                    content: $('#editTextModal') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                });
            }else if(obj.event="top"){
                var id =data.id;
                var top=data.top;
                var msg=""
                if(top){
                    msg="是否取消置顶？"
                }else{
                    msg="是否置顶？"
                }
                layer.confirm(msg, function (index) {
                    request.ajax({
                        type: 'POST',
                        url: '/note/admin/save',
                        data: {id: id, top: !top},
                    }).then(function (res) {
                        if(res.code=="0"){
                            findPage();
                            layer.close(index);
                        }
                    })
                });
            }
        });

        //请求分页
        function findPage() {
            console.log(name, "请求分页name")
            table.reload('table', {
                url: '/note/findPage'
                , request: {
                    pageName: 'page' //页码的参数名称，默认：page
                    , limitName: 'size' //每页数据量的参数名，默认：limit
                }
                , where: search //设定异步数据接口的额外参数
            });
        }

        //提交保存
        // form.on('submit(save)', function (data) {
        //     // layer.msg(JSON.stringify(data.field));
        //     request.ajax({
        //         type: 'POST',
        //         url: '/mote/save',
        //         data: data.field,
        //     }).then(function (result) {
        //         if (result.code == 0) {
        //             findPage();
        //             // layer.close(majorFormLayerIndex);
        //             layer.close(layer.index);
        //         }
        //     })
        //     return false;
        // });

        form.on('submit(saveText)', function (data) {
            // layer.msg(JSON.stringify(data.field));
            data.field[data.field.L_event] = data.field.L_content
            request.ajax({
                type: 'POST',
                url: '/note/admin/save',
                data: data.field,
            }).then(function (result) {
                if (result.code == 0) {
                    findPage();
                    layer.close(formLayerIndex);
                    // layer.close(layer.index);
                }
            })
            return false;
        });
        //提交搜索
        var search={};
        form.on('submit(search)', function (data) {
            // layer.msg(JSON.stringify(data.field));
            search = data.field;
            findPage();
            return false;
        });
        var formLayerIndex;


    });
</script>


</body>

